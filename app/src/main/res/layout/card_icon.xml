<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:textColor="@color/textColor"
            android:id="@+id/accessibleForInvalids"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/invalidSign"
            android:layout_toRightOf="@+id/invalidSign"
            android:layout_toEndOf="@+id/invalidSign" />
    <ImageView
        android:id="@+id/invalidSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sight_inner_margin"
         />
    </RelativeLayout>