<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/paidExcursionName"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/calendarDatePaidExcursion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_date"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/paidExcursionName"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/paidExcursionPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="500ла"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/paidExcursionGeopositionText"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:text="FHDFGFD"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/paidExcursionDate"
            app:layout_constraintLeft_toRightOf="@+id/paidExcursionGeopositionImage"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/paidExcursionDate"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:text="GFCGFD"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/paidExcursionName"
            app:layout_constraintLeft_toRightOf="@+id/calendarDatePaidExcursion"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:id="@+id/paidExcursionGeopositionImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_location"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/paidExcursionDate"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/paidExcursionButton"
            android:layout_width="108dp"
            android:layout_height="31dp"
            android:text="@string/more"
            android:textColor="@android:color/white"
            android:background= "#FF5621"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/paidExcursionGeopositionText"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" />
        <Button
            android:id="@+id/returnMoneyPaidExcursionButton"
            android:layout_width="138dp"
            android:visibility="gone"
            android:layout_height="31dp"
            android:text="@string/returnMoney"
            android:textColor="#FF5621"
            android:background= "#FFFFFF"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/paidExcursionGeopositionText"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/paidExcursionButton" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>