<resources>

    <!-- Base application splash_screen. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your splash_screen here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#3949AB</item>
        <item name="colorAccent">#00B0FF</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="CardField">
        <item name="android:background">@drawable/card_field_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="HeadingTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingTop">14dp</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="HintText">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#898989</item>
    </style>

    <style name="WhiteHeading">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
